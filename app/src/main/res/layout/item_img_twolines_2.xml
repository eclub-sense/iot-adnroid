<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip">

    <ImageView
        android:id="@+id/iv_sensor_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:adjustViewBounds="true"
        android:scaleType="fitCenter"

        android:layout_marginLeft="60dp"
        android:src="@drawable/ic_therm"/>

    <TextView
        android:id="@+id/tv_firstLine"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@id/secondLine"
        android:layout_toRightOf="@+id/iv_sensor_icon"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="Example item"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_secondLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/iv_sensor_icon"/>

</RelativeLayout>